
.container

  %h1 Listing events

  = link_to 'New Scrapper', new_scrapper_path, class: 'waves-effect waves-light btn'
  %br

  %table{class: 'striped'}
    %thead
      %tr
        %th Title
        %th
        %th
        %th

    %tbody
      - @events.each do |event|
        %tr
          %td= event.title
          %td= link_to 'Show', event
          %td= link_to 'Edit', edit_scrapper_path(event)
          %td= link_to 'Destroy', scrapper_path(event), :method => :delete, :data => { :confirm => 'Are you sure?' }
