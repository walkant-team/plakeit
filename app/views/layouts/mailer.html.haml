                  %table.btn-primary{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "font-size: 100%;line-height: 1.6em;margin: 0;padding: 0;margin-bottom: 10px;width: auto !important;margin-left: 32%"}
