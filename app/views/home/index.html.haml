%header.bgIndex
  %nav
    .nav-wrapper
      %a.brand-logo{:href => "#"}
        = link_to(image_tag("logo.png", :alt => "plakeit", :width => 150, :height => 60))
      .row.header-text
        .col.m8.offset-m2
          %h3 DESCUBRE EVENTOS EN TU CIUDAD
          %form.size-form
            .col.s12.m3
              %input{:placeholder => "Conciertos de", :type => "text"}
            .col.s12.m9.formTog
              %input{:placeholder => "Nombre o #tag", :type => "text", :name => "name "}

.col.s12.m12
  .col.s12.m12
    .row
      .col.s12.m7.offset-m3.menubar
        %ul
          %li.active TODOS
          %li CONCIERTOS
          %li TEATROS
          %li MUSICALES

.row.size-content
  = render @public_events

.row
  .col.s12.m5.offset-m5
    %ul.pagination
      %li.disabled
        %a{:href => "#!"}
          %i.material-icons chevron_left
      %li.active
        %a{:href => "#!"} 1
      %li.waves-effect
        %a{:href => "#!"} 2
      %li.waves-effect
        %a{:href => "#!"} 3
      %li.waves-effect
        %a{:href => "#!"} 4
      %li.waves-effect
        %a{:href => "#!"} 5
      %li.waves-effect
        %a{:href => "#!"}
          %i.material-icons chevron_right
