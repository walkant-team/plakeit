.col.s12.m4
  .card
    .card-image
      = link_to public_event, 'data-no-turbolink' => true do
        = attachment_image_tag(public_event, :image, fallback: 'header.jpeg')
    .card-content
      = link_to public_event.title, public_event, class: 'truncate', 'data-no-turbolink' => true
    .card-action
      %p
        %i.fa.fa-calendar.fa-3x
        = l(public_event.start_at, format: :long)
      %p
        %i.fa.fa-map-marker.fa-3x
        = public_event.address
