.row.pt20.hide-on-small-only
  .col.s8.push-s2
    .col.l4
      %h5.footer-tittle Negocios
      %ul.footer-content
        = render 'shared/link_business'

    .col.l4
      %h5.footer-tittle Usuarios
      %ul.footer-content
        = render 'shared/link_user'

    .col.l4
      %h5.footer-tittle Síguenos
      .col.s6.m6
        %ul.footer-social
          = render 'shared/link_social'

%footer.page-footer.hide-on-small-only
  .footer-image
    = image_tag('footer.png')
  .footer-copyright.center
    .container
      © 2016 Plakeit, Inc.

.row.mb0.hide-on-large-only.hide-on-med-only
  %ul.footer-movil-content.collapsible{"data-collapsible" => "accordion"}
    %li
      .collapsible-header
        %i.material-icons> business
        Negocios
      .collapsible-body
        %ul.footer-movil-list
          = render 'shared/link_business'
    %li
      .collapsible-header
        %i.material-icons> group
        Usuarios
      .collapsible-body
        %ul.footer-movil-list
          = render 'shared/link_user'

%footer.page-footer.hide-on-large-only.hide-on-med-only
  .footer-copyright
    = image_tag 'logo.png', alt: 'plakeit', width: 100, height: 40
    %ul.footer-social-movil
      %li Síguenos
      = render 'shared/link_social'
