.navbar-fixed
  %ul#dropdown1.dropdown-content
    %li= link_to 'Logout', logout_path
  %nav
    .nav-wrapper
      = link_to root_path, class: 'left' do
        = image_tag 'logo.png', alt: 'plakeit', width: 100, height: 40
      %ul#nav-mobile.left.hide-on-med-and-down
        %li= link_to 'CONCIERTOS', category_events_path('concerts', anchor: 'content-event')
        %li= link_to 'MUSICALES', category_events_path('musical', anchor: 'content-event')
        %li= link_to 'TEATRO', category_events_path('theater', anchor: 'content-event')
      %ul#nav-mobile.right.hide-on-med-and-down
        %li
          = link_to '#' do
            %i.material-icons search
        - if logged_in?
          %li
            = link_to '#!', class: 'dropdown-button', data: { activates: 'dropdown1' } do
              = image_tag current_user.avatar, class: 'circle user'
              %i.material-icons.right arrow_drop_down
        - else
          %li= link_to 'SIGN UP / LOGIN' ,'/auth/facebook'
